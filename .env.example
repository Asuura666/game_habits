# ===========================================
# Habit Tracker - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# ===========================================
# DATABASE
# ===========================================
DB_USER=habit_user
DB_PASSWORD=<CHANGE_ME_STRONG_PASSWORD>
DB_NAME=habit_tracker

# ===========================================
# REDIS
# ===========================================
REDIS_URL=redis://redis:6379/0

# ===========================================
# SECURITY
# ===========================================
# Generate with: openssl rand -hex 32
SECRET_KEY=<GENERATE_WITH_openssl_rand_-hex_32>
JWT_ALGORITHM=HS256
JWT_EXPIRE_MINUTES=43200  # 30 days

# ===========================================
# OAUTH (Optional)
# ===========================================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
APPLE_CLIENT_ID=
APPLE_TEAM_ID=
APPLE_KEY_ID=

# ===========================================
# LLM APIs (for task evaluation)
# ===========================================
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
LLM_PROVIDER=anthropic  # anthropic | openai
LLM_MODEL=claude-3-5-haiku-20241022

# ===========================================
# APP
# ===========================================
ENVIRONMENT=production
LOG_LEVEL=INFO
CORS_ORIGINS=https://habit.apps.ilanewep.cloud

# ===========================================
# RATE LIMITS
# ===========================================
LLM_DAILY_LIMIT=20
TASK_XP_DAILY_LIMIT=500
